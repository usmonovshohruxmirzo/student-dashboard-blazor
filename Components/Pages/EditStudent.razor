@page "/edit-student"

<h1 class="page-title">Edit Student</h1>

<div class="edit-student-container">
    <div class="students-list">
        <h3>Select Student</h3>
        <div class="student-item active">
            <span>Alex Johnson</span>
        </div>
        <div class="student-item">
            <span>Emily Clark</span>
        </div>
        <div class="student-item">
            <span>David Lee</span>
        </div>
    </div>

    <div class="edit-form-panel">
        <div class="student-header">
            <img src="/favicon.png" alt="Profile" />
            <div>
                <h2>Alex Johnson</h2>
                <p>Grade: <strong>B</strong></p>
            </div>
        </div>

        <form class="student-form edit-mode">
            <div class="form-group">
                <label for="name">Full Name</label>
                <input type="text" id="name" value="Alex Johnson" />
            </div>

            <div class="form-group">
                <label for="gender">Gender</label>
                <select id="gender">
                    <option>Male</option>
                    <option selected>Female</option>
                    <option>Other</option>
                </select>
            </div>

            <div class="form-group">
                <label for="dob">Date of Birth</label>
                <input type="date" id="dob" value="2004-06-12" />
            </div>

            <div class="form-group">
                <label for="gpa">GPA</label>
                <input type="number" id="gpa" min="0" max="4" step="0.01" value="3.85" />
            </div>

            <div class="form-group">
                <label for="grade">Grade</label>
                <select id="grade">
                    <option>A</option>
                    <option selected>B</option>
                    <option>C</option>
                    <option>D</option>
                    <option>F</option>
                </select>
            </div>

            <div class="form-group">
                <label for="subjects">Subjects (comma-separated)</label>
                <input type="text" id="subjects" value="Math, English, Science" />
            </div>

            <div class="form-actions">
                <button type="submit" class="save-btn">Save Changes</button>
                <button type="button" class="cancel-btn">Cancel</button>
                <button type="button" class="delete-btn">Delete Student</button>
            </div>
        </form>
    </div>
</div>
