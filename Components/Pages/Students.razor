@page "/students"

<h1 class="page-title">Students</h1>

<div class="search-bar">
    <input type="text" placeholder="Search students..." />
    <button>Search</button>
</div>

<table class="students-table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Gender</th>
            <th>GPA</th>
            <th>Grade</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var student in _students)
    {
        <tr>
            <td>@student.Id</td>
            <td>@student.Name</td>
            <td>@student.Gender</td>
            <td>@student.Gpa</td>
            <td><span class="badge @(GradeColor(@student.Grade))">@student.Grade</span></td>
            <td>
                <button class="edit-btn">Edit</button>
                <button class="delete-btn">Delete</button>
            </td>
        </tr>
    }
    </tbody>
</table>


@code {

    public class Student
    {
        public required string Id { get; set; }
        public required string Name { get; set; }
        public required string Gender { get; set; }
        public required double Gpa { get; set; }
        public required char Grade { get; set; }
    }
    
    readonly List<Student> _students = new()
    {
        new Student { Id = "001", Name = "Alex", Gender = "male", Gpa = 3.15, Grade = 'A' },
        new Student { Id = "002", Name = "Diana", Gender = "female", Gpa = 3.82, Grade = 'B' },
        new Student { Id = "003", Name = "Evan", Gender = "male", Gpa = 2.45, Grade = 'C' },
        new Student { Id = "004", Name = "Fiona", Gender = "female", Gpa = 3.90, Grade = 'A' },
        new Student { Id = "005", Name = "George", Gender = "male", Gpa = 3.05, Grade = 'B' },
        new Student { Id = "006", Name = "Helen", Gender = "female", Gpa = 3.55, Grade = 'A' },
        new Student { Id = "007", Name = "Bob", Gender = "male", Gpa = 2.75, Grade = 'C' },
        new Student { Id = "008", Name = "Cathy", Gender = "female", Gpa = 3.25, Grade = 'B' }
    };

    string GradeColor(char grade)
    {
        string className = String.Empty;
        
        switch (grade)
        {
            case 'A':
                className = "badge-success";
                break;
            case 'B':
                className = "badge-warning";
                break;
            case 'C':
                className = "badge-fail";
                break;
        }

        return className;
    }
}
